<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <title>@ViewBag.Title - Willem's Fizzy Logic</title>
    <link rel="canonical" href="https://fizzylogic.nl/" />
    <link rel="icon" href="/favicon.png" type="image/png" />
    @await RenderSectionAsync("Head", required: false)
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom fixed-top shadow">
      <div class="container">
        <a asp-page="/Index" class="navbar-brand">Willem's Fizzy Logic - Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item"><a asp-page="/Admin/Index" class="nav-link">Dashboard</a></li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item"><a asp-page="/Index" class="nav-link">Visit website</a></li>
            <li class="nav-item"><a asp-page="/Account/Logout" class="nav-link">Log out</a></li>
          </ul>
        </div>
      </div>
    </nav>

    @RenderBody()
  
    <script src="~/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/bootstrap.bundle.js" asp-append-version="true"></script>
    <script src="~/js/infinite-scroll.pkgd.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>