}
@section Scripts {
    <script src="/_framework/blazor.server.js"></script>
    <script src="/js/content-editor.js" asp-append-version="true"></script>
    <script src="/js/toastui-editor-all.min.js" asp-append-version="true"></script>
}

<component type="typeof(App)" render-mode="ServerPrerendered" />

